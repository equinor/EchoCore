{
    "name": "@equinor/echo-core-lerna",
    "version": "0.0.0",
    "description": "Echo Core - Core functionality for the echo.equinor.com",
    "scripts": {
        "echo-test": "jest",
        "core-start": "lerna run start --stream --scope @equinor/echo-core",
        "version": "lerna version --conventional-commits --yes",
        "lerna-install": "lerna exec npm install",
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "link": "lerna exec npm link --scope @equinor/echo-core",
        "unlink": "lerna exec npm unlink --scope @equinor/echo-core",
        "echo-publish": "lerna publish from-package --yes --no-verify-access",
        "test-wo-install": "jest --watchAll",
        "test": "npm ci & jest --watchAll",
        "test-coverage": "npm ci & jest --coverage --watchAll",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx packages --color"
    },
    "author": "Echo Core Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/equinor/EchoCore"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@babel/preset-typescript": "^7.12.7",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.37",
        "@types/react": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "babel-jest": "^26.6.3",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.2",
        "eslint-plugin-react-hooks": "^4.1.2",
        "jest": "^26.6.3",
        "jest-expo": "^40.0.1",
        "lerna": "^4.0.0",
        "prettier": "^2.0.5",
        "typescript": "^4.1.2"
    }
}
